<% extend 'layout' %>

    <body>

        <div id="fullpage">
            <div class="section" id="section0">
                <h1><span id="first-name"><%= @firstName %></span> <span id="last-name"><%= @lastName %></span></h1>
                <div class="box">
                    <em> <%- @description %> </em>
                </div>
                <div class="box">
                    <span class="contact email"><i class="fa fa-envelope"></i>&nbsp;
                        <a href="mailto:<%- @email %>"><%- @email %></a>
                    </span>
                    <br />
                    <span class="contact phone"><i class="fa fa-phone"></i>&nbsp;
                        <a href="#"><%- @phone %></a>
                    </span>
                    <br />
                    <span class="contact">
                        <% if @github?.length : %>
                        <a href="<%- @github %>"><i class="fa fa-github fa-2x"></i></a>
                        <% end %>
                    </span>
                    <span class="contact">
                        <% if @linkedin?.length : %>
                        <a href="<%- @linkedin %>"><i class="fa fa-linkedin-square fa-2x"></i></a>
                        <% end %>
                    </span>
                    <span class="contact">
                        <% if @website?.length : %>
                        <a href="<%- @website %>"><i class="fa fa-home fa-2x"></i></a>
                        <% end %>
                    </span>
                </div>
            </div>
            <div class="section" id="section1">
                <h1>Professions</h1>
                <div class="wrap">
                    <div class="box">
                        text in box div
                    </div>
                </div>
            </div>

            <div class="section moveDown" id="section2">
                <h1>Careers</h1>
                <div class="wrap">
                    <div class="box">
                        text in box div
                    </div>
                </div>
            </div>
            <div class="section moveDown" id="section3">
                <h1>Educations</h1>
                <div class="wrap">
                    <div class="box">
                        text in box div
                    </div>
                </div>
            </div>
        </div>

    </body>
